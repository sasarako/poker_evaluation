<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/poker_result_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/poker_firstPlayer_linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/primary_margin"
        tools:text="testtttttt" />

    <LinearLayout
        android:id="@id/poker_firstPlayer_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/firstPlayerOnHandCard_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/horizontal_margin"
            tools:text="testtttttt" />

        <EditText
            android:id="@+id/poker_firstPlayerCard_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:hint="@string/hint_your_hand_card"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="10"
            android:maxLines="1" />

        <TextView
            android:id="@+id/poker_firstPlayer_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_player_name" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_add_card_txt" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/secondPlayerOnHandCard_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/horizontal_margin"
            tools:text="testtttttt" />

        <EditText
            android:id="@+id/poker_secondPlayerCard_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:hint="@string/hint_your_hand_card"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="10"
            android:maxLines="1" />

        <TextView
            android:id="@+id/poker_secondPlayer_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_player_name" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_add_card_txt" />
    </LinearLayout>

    <Button
        android:id="@+id/poker_calculate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/poker_firstPlayer_linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/primary_margin"
        android:text="@string/main_calculate_result_txt" />


</RelativeLayout>
